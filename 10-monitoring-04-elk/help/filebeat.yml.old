filebeat.inputs:
  - type: container
    #AT
    enabled: true
    json.keys_under_root: true	
    encoding: utf-8
    paths:
      # - '/var/lib/docker/containers/*/*.log'
      - '/var/lib/docker/containers/old/*.log'


processors:
  - add_docker_metadata:
      host: "unix:///var/run/docker.sock"

  - decode_json_fields:
      fields: ["message"]
      #at
      # target: "json"
      target: ""
      overwrite_keys: true
  - add_docker_metadata: ~

output.logstash:
  # AT
  hosts: ["logstash:5046"]
  # hosts: ["194.67.204.114:5046"]


#output.console:
#  enabled: true

logging.json: true
logging.metrics.enabled: false
